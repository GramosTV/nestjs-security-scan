{
  "name": "nestjs-security-scan",
  "version": "1.1.0",
  "description": "Security scanner for NestJS applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "nestjs-security-scan": "dist/cli.js"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "quality": "npm run type-check && npm run lint && npm run format:check",
    "prepare": "npm run build",
    "prepublishOnly": "npm run quality && npm run build"
  },
  "keywords": [
    "nestjs",
    "security",
    "vulnerability",
    "scanner",
    "audit"
  ],
  "author": "Miko≈Çaj Gramowski <gramowskimikolaj@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gramostv/nestjs-security-scan.git"
  },
  "bugs": {
    "url": "https://github.com/gramostv/nestjs-security-scan/issues"
  },
  "homepage": "https://github.com/gramostv/nestjs-security-scan#readme",
  "dependencies": {
    "@google/genai": "^1.5.1",
    "axios": "^1.8.4",
    "chalk": "^4.1.2",
    "commander": "^13.1.0",
    "dependency-check": "^4.1.0",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.1",
    "inquirer": "^12.0.0",
    "snyk": "^1.1296.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@nestjs/common": "^11.0.17",
    "@nestjs/core": "^11.0.17",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^16.2.0",
    "helmet": "^8.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  },
  "peerDependencies": {
    "@nestjs/common": ">=8.0.0",
    "@nestjs/core": ">=8.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ]
}
